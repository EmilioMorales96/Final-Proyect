# Database Configuration (Neon PostgreSQL)
DATABASE_URL=postgresql://username:password@ep-xyz-123.us-east-1.aws.neon.tech/database_name?sslmode=require

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Salesforce Integration (Optional)
SALESFORCE_INSTANCE_URL=https://your-domain.salesforce.com
SALESFORCE_CLIENT_ID=your-salesforce-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret

# Power Automate Integration (Optional)
ONEDRIVE_ACCESS_TOKEN=your-onedrive-access-token
DROPBOX_ACCESS_TOKEN=your-dropbox-access-token

# Server Configuration
PORT=5000
NODE_ENV=production

# Note for Render Deployment:
# - DATABASE_URL will be automatically provided by Neon
# - Set NODE_ENV=production in Render environment variables
# - All other variables must be manually configured in Render dashboard
